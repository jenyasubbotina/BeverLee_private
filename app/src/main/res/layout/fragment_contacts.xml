<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragments.ContactsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_refresh_layout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_layout"
            android:background="#FFF">

            <View
                android:id="@+id/contacts_header_layout"
                android:layout_width="0dp"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/monitoring_header"/>

            <TextView
                android:id="@+id/contacts_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/contacts"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="40dp"
                android:textSize="19sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/contacts_search_edit_text"
                android:layout_width="0dp"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@id/contacts_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/dark_search_field"
                android:hint="@string/search"
                android:textColorHint="#FFF"
                android:textSize="12sp"
                android:textColor="#FFF"
                android:maxLines="1"
                android:fontFamily="@font/geometria_light"
                android:drawableStart="@drawable/ic_loop_white"
                android:drawablePadding="11dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:inputType="text"
                android:autofillHints="@string/contacts"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/contacts_search_edit_text"
                app:layout_constraintStart_toStartOf="@id/contacts_search_edit_text"
                app:layout_constraintEnd_toEndOf="@id/contacts_search_edit_text"
                app:layout_constraintBottom_toBottomOf="@id/contacts_header_layout"
                android:orientation="horizontal"
                android:checkedButton="@id/all_radio_btn"
                android:gravity="center"
                android:background="@drawable/radio_group_income">

                <RadioButton
                    android:id="@+id/all_radio_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:enabled="true"
                    android:text="@string/all"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/geometria_medium"
                    android:textSize="13sp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/favorites_radio_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/favorites"
                    android:textColor="@color/colorDarkGrey"
                    android:fontFamily="@font/geometria_medium"
                    android:textSize="13sp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:button="@null"/>
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contact_list_recycler_view"
                android:background="#FFF"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/contacts_header_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="76dp"/>

            <TextView
                android:id="@+id/contact_list_empty_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/contact_list_recycler_view"
                app:layout_constraintStart_toStartOf="@id/contact_list_recycler_view"
                app:layout_constraintEnd_toEndOf="@id/contact_list_recycler_view"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:text="@string/contact_list_empty"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/geometria_actual"
                android:textStyle="italic"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/contact_list_recycler_view"
                app:layout_constraintBottom_toBottomOf="@id/contact_list_recycler_view"
                app:layout_constraintStart_toStartOf="@id/contact_list_recycler_view"
                app:layout_constraintEnd_toEndOf="@id/contact_list_recycler_view"
                android:indeterminateTint="@color/colorPurple"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>