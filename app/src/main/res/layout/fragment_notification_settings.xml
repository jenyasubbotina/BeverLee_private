<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_refresh_layout"
    tools:context=".view.fragments.NotificationSettingsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notifications_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:text="@string/notifications"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:fontFamily="@font/geometria_medium"
                android:textSize="19sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/back_arrow_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card_layout"
                app:layout_constraintDimensionRatio="H, 1:1"
                android:src="@drawable/ic_back_vector"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/transfer"/>

            <View
                android:id="@+id/card_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/notifications_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/card_top_radius_light"/>

            <CheckBox
                android:id="@+id/notify_news_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/card_layout"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:layout_marginTop="45dp"
                android:layout_marginStart="36dp"
                android:textColor="@color/colorPurple"
                android:buttonTint="@color/colorPurple"/>

            <TextView
                android:id="@+id/notify_news_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/notify_news_check_box"
                app:layout_constraintBottom_toBottomOf="@id/notify_news_check_box"
                app:layout_constraintStart_toEndOf="@id/notify_news_check_box"
                android:layout_marginStart="24dp"
                android:text="@string/notify_news"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:textSize="17sp"/>

            <CheckBox
                android:id="@+id/notify_bonuses_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notify_news_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_check_box"
                android:layout_marginTop="39dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textColor="@color/colorPurple"
                android:buttonTint="@color/colorPurple"/>

            <TextView
                android:id="@+id/notify_bonuses_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/notify_bonuses_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_text_view"
                android:text="@string/notify_bonuses"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:textSize="17sp"/>

            <CheckBox
                android:id="@+id/notify_income_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notify_bonuses_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_check_box"
                android:layout_marginTop="39dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textColor="@color/colorPurple"
                android:buttonTint="@color/colorPurple"/>

            <TextView
                android:id="@+id/notify_income_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/notify_income_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_text_view"
                android:text="@string/notify_income"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:textSize="17sp"/>

            <CheckBox
                android:id="@+id/notify_purchase_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notify_income_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_check_box"
                android:layout_marginTop="39dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textColor="@color/colorPurple"
                android:buttonTint="@color/colorPurple"/>

            <TextView
                android:id="@+id/notify_purchase_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/notify_purchase_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_text_view"
                android:text="@string/notify_purchase"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:textSize="17sp"/>

            <CheckBox
                android:id="@+id/notify_replenish_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notify_purchase_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_check_box"
                android:layout_marginTop="39dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textColor="@color/colorPurple"
                android:buttonTint="@color/colorPurple"/>

            <TextView
                android:id="@+id/notify_replenish_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/notify_replenish_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_text_view"
                android:text="@string/notify_debit"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:textSize="17sp"/>

            <CheckBox
                android:id="@+id/notify_withdrawal_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notify_replenish_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_check_box"
                android:layout_marginTop="39dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textColor="@color/colorPurple"
                android:buttonTint="@color/colorPurple"/>

            <TextView
                android:id="@+id/notify_withdrawal_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/notify_withdrawal_check_box"
                app:layout_constraintBottom_toBottomOf="@id/notify_withdrawal_check_box"
                app:layout_constraintStart_toStartOf="@id/notify_news_text_view"
                android:text="@string/notify_withdrawal"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/notification_settings_error_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/card_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/error_check_internet"
                android:fontFamily="@font/geometria_medium"
                android:textSize="16sp"
                android:textColor="@color/colorRed"
                android:visibility="gone"/>

            <Button
                android:id="@+id/save_btn"
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                app:layout_constraintBottom_toBottomOf="@id/card_layout"
                android:background="@drawable/btn_purple"
                android:text="@string/save"
                android:textAllCaps="false"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:elevation="2dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/card_layout"
                app:layout_constraintBottom_toBottomOf="@id/card_layout"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                android:indeterminateTint="@color/colorPurple"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>