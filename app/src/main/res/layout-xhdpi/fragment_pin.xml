<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context=".view.fragments.PinFragment">

    <ImageView
        android:id="@+id/lock_image_view"
        android:layout_width="0dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toTopOf="@id/pin_text_view"
        app:layout_constraintStart_toStartOf="@id/two_text_view"
        app:layout_constraintEnd_toEndOf="@id/two_text_view"
        android:src="@drawable/ic_locker"
        android:contentDescription="@string/create_pin"
        android:layout_marginBottom="18dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/pin_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:fontFamily="@font/geometria_medium"
        android:textSize="17sp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/pin_error_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pin_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/error_wrong_pin"
        android:fontFamily="@font/geometria_medium"
        android:textSize="14sp"
        android:textColor="@color/colorRed"
        android:visibility="invisible"/>

    <View
        android:id="@+id/pin_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pin_error_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_top_radius_light" />

    <ImageView
        android:id="@+id/first_star_image_view"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@id/pin_card"
        app:layout_constraintEnd_toStartOf="@id/second_star_image_view"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="123dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <ImageView
        android:id="@+id/second_star_image_view"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/first_star_image_view"
        app:layout_constraintEnd_toStartOf="@id/third_star_image_view"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="21dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <ImageView
        android:id="@+id/third_star_image_view"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/second_star_image_view"
        app:layout_constraintEnd_toStartOf="@id/forth_star_image_view"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="21dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <ImageView
        android:id="@+id/forth_star_image_view"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/third_star_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="123dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <TextView
        android:id="@+id/one_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/two_text_view"
        app:layout_constraintBottom_toBottomOf="@id/two_text_view"
        app:layout_constraintStart_toStartOf="@id/four_text_view"
        app:layout_constraintEnd_toEndOf="@id/four_text_view"
        android:text="@string/one"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground" />

    <TextView
        android:id="@+id/two_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        app:layout_constraintStart_toStartOf="@id/five_text_view"
        app:layout_constraintEnd_toEndOf="@id/five_text_view"
        android:layout_marginTop="131dp"
        android:text="@string/two"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/three_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/six_text_view"
        app:layout_constraintEnd_toEndOf="@id/six_text_view"
        app:layout_constraintTop_toTopOf="@id/two_text_view"
        app:layout_constraintBottom_toBottomOf="@id/two_text_view"
        android:text="@string/three"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/four_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/pin_card"
        app:layout_constraintEnd_toStartOf="@id/five_text_view"
        app:layout_constraintTop_toTopOf="@id/five_text_view"
        app:layout_constraintBottom_toBottomOf="@id/five_text_view"
        android:layout_marginStart="38dp"
        android:text="@string/four"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/five_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/two_text_view"
        app:layout_constraintBottom_toTopOf="@id/eight_text_view"
        app:layout_constraintStart_toEndOf="@id/four_text_view"
        app:layout_constraintEnd_toStartOf="@id/six_text_view"
        android:text="@string/five"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/six_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/five_text_view"
        app:layout_constraintBottom_toBottomOf="@id/five_text_view"
        app:layout_constraintStart_toEndOf="@id/five_text_view"
        app:layout_constraintEnd_toEndOf="@id/pin_card"
        android:layout_marginEnd="38dp"
        android:text="@string/six"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/seven_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/four_text_view"
        app:layout_constraintEnd_toEndOf="@id/four_text_view"
        app:layout_constraintTop_toBottomOf="@id/four_text_view"
        app:layout_constraintBottom_toTopOf="@id/ten_text_view"
        android:text="@string/seven"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/eight_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/five_text_view"
        app:layout_constraintEnd_toEndOf="@id/five_text_view"
        app:layout_constraintTop_toBottomOf="@id/five_text_view"
        app:layout_constraintBottom_toTopOf="@id/zero_text_view"
        android:text="@string/eight"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/nine_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/six_text_view"
        app:layout_constraintEnd_toEndOf="@id/six_text_view"
        app:layout_constraintTop_toTopOf="@id/eight_text_view"
        app:layout_constraintBottom_toBottomOf="@id/eight_text_view"
        android:text="@string/nine"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/ten_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/seven_text_view"
        app:layout_constraintEnd_toEndOf="@id/seven_text_view"
        app:layout_constraintTop_toTopOf="@id/zero_text_view"
        app:layout_constraintBottom_toBottomOf="@id/zero_text_view"
        android:text="@string/eight"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/zero_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/five_text_view"
        app:layout_constraintEnd_toEndOf="@id/five_text_view"
        app:layout_constraintBottom_toBottomOf="@id/pin_card"
        android:layout_marginBottom="45dp"
        android:text="@string/zero"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <ImageView
        android:id="@+id/erase_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/six_text_view"
        app:layout_constraintEnd_toEndOf="@id/six_text_view"
        app:layout_constraintTop_toTopOf="@id/zero_text_view"
        app:layout_constraintBottom_toBottomOf="@id/zero_text_view"
        android:src="@drawable/ic_erase"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/create_pin"
        android:scaleType="centerInside"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        app:layout_constraintDimensionRatio="1.35:1"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPurple"
        app:layout_constraintTop_toTopOf="@id/first_star_image_view"
        app:layout_constraintBottom_toBottomOf="@id/first_star_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>